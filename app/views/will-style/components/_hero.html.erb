<% name = controller_name + "-" + action_name %>

<section id="<%= name %>-top" class="hero container-fluid bg-dark">
	<% unless defined?(custom_content) && custom_content == true %>
		<%= yield %>
	<% end %>

	<div class="row full-height align-items-center image-bg<%= (defined?(include_pattern) && include_pattern == false) ? "" : " patterned-bg" %>"

		<% if defined?(background_image) %>
			style="background-image: url('<%= asset_url(background_image) %>')"
		<% end %>
		>

		<% if defined?(background_video) %>
			<div class="video-bg">
				<video playsinline autoplay muted loop preload="auto" src="<%= background_video %>"></video>
			</div>
		<% end %>

		<div class="col-sm-12">
			<div class="row">
				<div class="col-sm-12 expanded">
					<% if defined?(custom_content) && custom_content == true %>
						<%= yield %>
					<% else %>
						<%= render partial: "will-style/components/heading", locals: {
							subtitle: defined?(subtitle) ? subtitle : "",
							title: defined?(title) ? title : "",
							invert_colors: true,
							page_heading: true
						} %>
					<% end %>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-12 expanded-y text-center" data-animated data-animated-default data-animated-delay="1200" data-animated-hidden-after>
					<i class="will-icon-next_arrow text-light display-4 rotated"></i>
				</div>
			</div>
		</div>
	</div>
</section>
