<% # Logo Style Options: %>

<% # default: white lettering with gradient logo %>
<% # dark: grey lettering with gradient logo %>
<% # mono: white lettering with white logo %>
<% # mono-dark: grey lettering with grey logo %>

<% unless local_assigns[:logo_style] %>
	<% logo_style = "default" %>
<% end %>

<% if logo_style == "default" || logo_style == "mono" %>
	<% letter_fill = "#F5F5F5" %>
<% else %>
	<% letter_fill = "#696868" %>
<% end %>

<% if logo_style == "mono" || logo_style == "mono-dark" %>
	<% arrow_fill = letter_fill %>
<% else %>
	<% arrow_fill = "gradient" %>
<% end %>

<% # you can set the random number for linear gradients here with a local assign %>

<% unless local_assigns[:id_randomizer] %>
	<% id_randomizer = rand(1..10000) %>
<% end %>

