<% # We need dataTables
	content_for :javascript_includes do %>
  <%= javascript_include_tag "dataTables_inits.js" %>
<% end %>

<div class="page-header">
	<header>
		<h1><%= @title %></h1>
	</header>
	
	<%= render "navigation/ui_elements_breadcrumbs" %>

</div>

<div class="row-fluid">
	<div class="span6">
		<div class="widget">
			<div class="widget-head">
				<h5>Static Plain Table</h5>
			</div>
			<table class="table">
				<thead>
					<tr>
						<th>Column Aa</th>
						<th>Column Bb</th>
						<th>Column Cc</th>
					</tr>
				</thead>
				<tbody>
					<% 3.times do |i| %>
						<tr>
							<% 3.times do |i| %>
								<td>Row <%= i+1 %></td>
							<% end %>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>		
	</div>
	<div class="span6">
		<div class="widget">
			<div class="widget-head">
				<h5>Static Detailed & Focusable Table</h5>
			</div>
			<table class="table table-striped table-bordered table-hover table-detailed table-focusable">
				<thead>
					<tr>
						<th>Column Aa</th>
						<th>Column Bb</th>
						<th>Column Cc</th>
					</tr>
				</thead>
				<tbody>
					<% 3.times do |i| %>
						<tr>
							<% 3.times do |i| %>
								<td>Row <%= i+1 %></td>
							<% end %>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<div class="widget">
	<div class="widget-head">
		<h5>Actionable Table</h5>
	</div>

	<table class="table table-striped table-bordered table-hover table-selectable" id="actionable_example">
		<thead>
	   <tr>
				<th class="centered"><input type="checkbox" class="checkAll"></th>
		    <th>Image</th>
		    <th>Description</th>
		    <th>Date</th>
		    <th>File info</th>
		    <th class="actions">Actions</th>
			</tr>
		</thead>
		<% 4.times do |i| %>
			<tr>
	      <td class="centered"><input type="checkbox" id="check<%= i+1 %>" name="checkbox[]"></td>
	      <td class="centered"><img src="http://cambelt.co/60x60?font_size=9" /></td>
	      <td><a href="#" title="">Image description & link</a></td>
	      <td><%= Date.today %></td>
	      <td class="centered"><strong>Size:</strong> 215 Kb<br><strong>Format:</strong> .jpg</td>
	      <td class="centered actions">
	          <a href="#" class="btn btn-success" rel="tooltip" data-placement="top" data-original-title="Edit"><i class="icon-pencil"></i><span>Edit</span></a>
	          <a href="#" class="btn btn-danger" rel="tooltip" data-placement="top" data-original-title="Delete"><i class="icon-trash"></i><span>Delete</span></a>
						<a href="#" class="btn" rel="tooltip" data-placement="top" data-original-title="Settings"><i class="icon-cog"></i><span>Settings</span></a>
	      </td>
	    </tr>
		<% end %>
	</table>
	<div class="widget-footer">
		<div class="btn-group">
       	<button class="btn">Apply an Action:</button>
      	<button class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
      	<ul class="dropdown-menu">
          <li><a href="#">Action</a></li>
          <li><a href="#">Another action</a></li>
          <li><a href="#">Something else here</a></li>
        </ul>
    </div>
  </div>
</div>

