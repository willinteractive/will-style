<div class="page-header">
	<header>
		<h1><%= @title %></h1>
	</header>

	<%= render "navigation/ui_elements_breadcrumbs" %>

</div>

<% @colors = [
	{"color"=>"default","class"=>"", 				"icon"=>"cog"},
	{"color"=>"blue", 	"class"=>"info", 		"icon"=>"info-sign"},
	{"color"=>"green", 	"class"=>"success", "icon"=>"ok"},
	{"color"=>"orange", "class"=>"warning", "icon"=>"warning-sign"},
	{"color"=>"red", 		"class"=>"danger", 	"icon"=>"trash"},
	{"color"=>"dark", 	"class"=>"inverse", "icon"=>"plane"},
] %>

<% @otherColors = [
	{"color"=>"yellow", "class"=>""},
	{"color"=>"pink", 	"class"=>""},
	{"color"=>"purple", "class"=>""}
] %>

<div class="row-fluid">
	<% @colors.each do |c| %>
	<h4><%= c['color'] %> <small>.<% if c['class'] == "success" %>primary .success<% else %><%= c['class'] %><% end %></small></h4>
	<div class="row-fluid">
		<div class="span4">
			<% if c['color'] == "default" %>
			<div class="color-test gray"></div>
			<div class="color-test grayLight "></div>
			<div class="color-test grayLighter"></div>
			<div class="color-test white"></div>
			<% elsif c['color'] == "dark" %>
			<div class="color-test black"></div>
			<div class="color-test grayDarker "></div>
			<div class="color-test grayDark"></div>
			<% else %>
			<div class="color-test <%= c['color'] %> darker"></div>
			<div class="color-test <%= c['color'] %>"></div>
			<div class="color-test <%= c['color'] %> lighter"></div>
			<div class="color-test <%= c['color'] %> opaque"></div>
			<% end %>
		</div>
		<div class="span8">
			<button class="btn btn-<%= c['class'] %> " type="button">.btn</button>
			<button class="btn btn-large btn-<%= c['class'] %> " type="button"><i class="icon-<%= c['icon'] %>"></i>&ensp; .btn-large</button>
			<button class="btn btn-small btn-<%= c['class'] %> " type="button">.btn-small</button>
			<button class="btn btn-mini btn-<%= c['class'] %> " type="button">.btn-mini</button>
			<button class="btn btn-<%= c['class'] %> disabled " type="button">.disabled</button>
			<span class="label label-<%= c['class'] %>">.label</span>
			<span class="badge badge-<%= c['class'] %>">.badge</span>
		</div>
	</div>
	<% end %>
	
	<div class="row-fluid">
		<% @otherColors.each do |c| %>

		<div class="span4">
			<h4><%= c['color'] %></h4>
			<div class="color-test <%= c['color'] %> darker"></div>
			<div class="color-test <%= c['color'] %>"></div>
			<div class="color-test <%= c['color'] %> lighter"></div>
			<div class="color-test <%= c['color'] %> opaque"></div>
		</div>

		<% end %>
	</div>
</div>

