<hr>

<div class="row">
	<div class="col-xs-12">
		<h2>Standard Buttons</h2>
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
		<button class="btn btn-<%= @colors[0]["class"][1..-1] %> " type="button"><%= fa_icon @colors[0]["icon"] %>&ensp; .btn</button>
		&emsp;
		<button class="btn btn-lg btn-<%= @colors[1]["class"][1..-1] %> " type="button"><%= fa_icon @colors[1]["icon"] %>&ensp; .btn-lg</button>
		&emsp;
		<button class="btn btn-sm btn-<%= @colors[2]["class"][1..-1] %> " type="button">.btn-sm</button>
		&emsp;
		<button class="btn btn-xs btn-<%= @colors[3]["class"][1..-1] %> " type="button">.btn-xs</button>
		&emsp;
		<button class="btn btn-<%= @colors[0]["class"][1..-1] %> disabled " type="button">.disabled</button>
		&emsp;
		<span class="label label-<%= @colors[5]["class"][1..-1] %>">.label</span>
		&emsp;
		<span class="badge">.badge</span>		
	</div>
</div>

<hr>

<div class="row">
	<div class="col-xs-12">
		<h2>Other Button Types</h2>
	</div>
</div>

<div class="row">
	<div class="col-sm-4">
		<h5>.btn (all types look the same)</h5>
		<a class="btn btn-default" href="#">Link</a> <button class="btn btn-default" type="submit">Button</button> <input class="btn btn-default" type="button" value="Input"> <input class="btn btn-default" type="submit" value="Submit">
	</div>
	<div class="col-sm-4">
		<h5>.btn-group</h5>
		<div class="btn-group">
		  <button class="btn btn-default">1</button>
		  <button class="btn btn-default">2</button>
		  <button class="btn btn-default">3</button>
		  <button class="btn btn-default">4</button>
		</div>
	</div>
	<div class="col-sm-4">
		<h5>.btn-group > .dropdown-toggle</h5>
		<div class="btn-group">
	    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Button dropdowns <span class="caret"></span></button>
	   	<ul class="dropdown-menu">
	       <li><a href="#">Action</a></li>
	       <li><a href="#">Another action</a></li>
	       <li><a href="#">Something else here</a></li>
	       <li class="divider"></li>
	       <li><a href="#">Separated link</a></li>
	     </ul>
	 	</div>
	</div>
</div>
