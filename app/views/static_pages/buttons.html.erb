<div class="page-header">
	<header>
		<h1><%= @title %></h1>
	</header>

	<%= render "navigation/ui_elements_breadcrumbs" %>

</div>

<% @colors = [
	{"color"=>"default","class"=>".default",	"icon"=>"cog"},
	{"color"=>"blue", 	"class"=>".info", 		"icon"=>"info-circle"},
	{"color"=>"green", 	"class"=>".success", 	"icon"=>"check"},
	{"color"=>"orange", "class"=>".warning", 	"icon"=>"exclamation-triangle"},
	{"color"=>"yellow", "class"=>"$yellow"},
	{"color"=>"red", 		"class"=>".danger", 	"icon"=>"trash-o"},
	{"color"=>"pink", 	"class"=>"$pink"},
	{"color"=>"purple", "class"=>"$purple"}
] %>

<% @otherColors = [
] %>

<div class="row">
	<div class="col-xs-12">
		<h2>Colors</h2>
	</div>
</div>

<div class="row">		
<% @colors.each do |c| %>
	<% if c['color'] == "default" %>
	<div class="col-xs-5">
		<h5>.default</h5>
		<div class="color-test black"></div>
		<div class="color-test grayDarker "></div>
		<div class="color-test grayDark"></div>
		<div class="color-test gray"></div>
		<div class="color-test grayLight "></div>
		<div class="color-test grayLighter"></div>
		<div class="color-test white"></div>
	</div>
	<% else %>
	<div class="col-xs-1">
		<h5><%= c['class'] %></h5>
		<div class="color-test <%= c['color'] %>"></div>
	</div>
	<% end %>
	
<!--
	<div class="col-sm-8">
		
		
		
	</div>
-->
<% end %>
</div>

